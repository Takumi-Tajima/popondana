!!!
%html
  %head
    %meta{ :content => 'text/html; charset=UTF-8', 'http-equiv' => 'Content-Type' }/
    %title= content_for(:title) || 'Popondana'
    %meta{ content: 'width=device-width,initial-scale=1', name: 'viewport' }/
    %meta{ content: 'yes', name: 'apple-mobile-web-app-capable' }/
    %meta{ content: 'yes', name: 'mobile-web-app-capable' }/
    = csrf_meta_tags
    = csp_meta_tag
    = yield :head
    %link{ href: '/icon.png', rel: 'icon', type: 'image/png' }/
    %link{ href: '/icon.svg', rel: 'icon', type: 'image/svg+xml' }/
    %link{ href: '/icon.png', rel: 'apple-touch-icon' }/
    = stylesheet_link_tag :app, 'data-turbo-track': 'reload'
    = javascript_include_tag 'application', 'data-turbo-track': 'reload', type: 'module'
  %body
    %header.navbar.navbar-expand-lg.navbar-light.bg-light.mb-4
      .container
        = link_to "Popondana", root_path, class: "navbar-brand"
        
        .navbar-nav.ms-auto
          - if logged_in?
            %span.navbar-text.me-3
              こんにちは、#{current_user.name}さん
            = link_to "ログアウト", logout_path, method: :delete, class: "btn btn-outline-secondary btn-sm"
          - else
            = link_to "/auth/google_oauth2", method: :post, class: "btn btn-primary" do
              %i.bi.bi-google.me-2
              Googleでログイン

    %main.container
      = render 'shared/flash_messages'
      = yield
